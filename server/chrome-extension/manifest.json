
{
  "manifest_version": 3,
  "name": "Flow Recorder",
  "version": "1.0",
  "description": "Records user actions for workflow automation",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
