
{
  "name": "flowtastic-server",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "build": "electron-builder",
    "dev": "electron ."
  },
  "build": {
    "appId": "com.flowtastic.server",
    "productName": "Flowtastic Server",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "your-repo-name"
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "puppeteer": "^21.0.0",
    "tcp-port-used": "^1.0.2",
    "node-fetch": "^3.3.2",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
